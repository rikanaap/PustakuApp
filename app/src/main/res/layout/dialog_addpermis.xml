<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    android:background="@drawable/dialog_border"
    android:layout_margin="20dp">
    <TextView
        android:id="@+id/topTitleSectionDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Permintaan enable add book"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/editInputNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@color/gray"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:editable="false"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/topTitleSectionDialog"/>
    <EditText
        android:id="@+id/editInputAlasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alasan"
        android:backgroundTint="@color/black"
        android:textSize="14sp"
        android:maxLength="1000"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/editInputNama"/>
    <LinearLayout
        android:id="@+id/linearFotoAsliWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/editInputAlasan"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/imageSetFotoAsli"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@color/dark_purple" />
        <TextView
            android:id="@+id/textSetFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan foto anda"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonKirimPermintaan"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:background="@drawable/save_button"
        android:text="Kirim"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/linearFotoAsliWrapper"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>