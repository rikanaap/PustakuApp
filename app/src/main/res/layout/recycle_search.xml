<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchConstraintWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageSetBookCoverSearch"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textSetBookTitleSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Judul Buku"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/imageSetBookCoverSearch"
        app:layout_constraintStart_toEndOf="@id/imageSetBookCoverSearch"/>

    <TextView
        android:id="@+id/textSetBookPublisherSearch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Nama penulis"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/textSetBookTitleSearch"
        app:layout_constraintStart_toStartOf="@id/textSetBookTitleSearch"/>
</androidx.constraintlayout.widget.ConstraintLayout>