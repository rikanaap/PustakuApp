<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pustaku" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="tabLayoutFavorite">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Theme.Pustaku.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="alertDialog">
        <item name="background">@color/black</item>
    </style>
    <style name="textSearch">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="Theme.Pustaku.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pustaku.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>